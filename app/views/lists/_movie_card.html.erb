<div class="row">
  <% movies.each do |movie| %>
    <div class="col-sm-6 col-md-4 col-lg-3">
      <div class="card-category m-3 color-white" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url( <%= movie.poster_url %> )">
        <%= movie.title %>
      </div>
    </div>
  <% end %>
  </div>
