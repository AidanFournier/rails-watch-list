<%= render 'banner' %>

<div class="m-3">
  <h1 class="title mx-3">Lists</h1>

  <div class="row">
      <% @lists.each do |list| %>
        <div class="col-sm-6 col-md-4 col-lg-3">
          <div class="card-category m-3 color-white" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1535016120720-40c646be5580?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1500&q=80)">
            <%= link_to list.name, list_path(list)  %>
          </div>
        </div>
      <% end %>
  </div>
</div>
