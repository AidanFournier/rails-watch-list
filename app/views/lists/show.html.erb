<div class="m-5">

  <div class='d-flex justify-content-between'>
    <h1> <%= @list.name %></h1>

    <div>
      <%= link_to new_list_bookmark_path(@list) do %>
        <i class="fas fa-film"></i>
      <% end %>
      <p class="small-print">Add a movie</p>
    </div>
  </div>

  <%= render 'movie_card', movies: @movies %>
  <div class="my-5">
    <%= link_to "Back", lists_path, class: "btn btn-primary border"  %>
  </div>
</div>
