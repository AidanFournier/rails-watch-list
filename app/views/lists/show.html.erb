<% if @list.photo.attached? %>
  <div class="page-header-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key %>')"></div>
<% else %>
    <div class="page-header-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1535016120720-40c646be5580?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1500&q=80')"></div>
<% end %>

  <%= render 'nav', list: @list, movies: @movies %>

  <div class="m-5">

    <div class='d-flex justify-content-between mb-3'>
      <h1> <%= @list.name %></h1>
    </div>

    <% if @movies.present? %>
      <%= render 'movie_card', movies: @movies %>
    <% else %>
      <%= "This list is empty. Add some flicks by clicking on the + in the upper right corner!" %>
    <% end %>

    <div class="my-5">
      <%= link_to "Back", root_path, class: "btn-medium"  %>
    </div>
  </div>

</div>
